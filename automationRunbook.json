{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "AutomationAccountName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Azure Automation account to deploy to."
            }
        },
        "RunbookName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Azure Automation Runbook to deploy."
            }
        },
        "RunbookDescription": {
            "type": "string",
            "metadata": {
                "description": "The Azure Automation Runbook description."
            }
        },
        "RunbookVersion": {
            "type": "string",
            "defaultValue": "1.0.0.0",
            "metadata": {
                "description": "The Azure Automation Runbook description."
            }
        },
        "ScriptUri": {
            "type": "string",
            "metadata": {
                "description": "The Azure Automation Runbook Uri to deploy from."
            }
        },
        "JobID": {
            "type": "string",
            "metadata": {
                "description": "A unique ID for the Azure Automation Runbook Job execution."
            }
        },
        "AccountId": {
            "type": "string",
            "metadata": {
                "description": "A unique ID for the Azure Automation Runbook Job execution."
            }
        },
        "AccessToken": {
            "type": "string",
            "metadata": {
                "description": "A unique ID for the Azure Automation Runbook Job execution."
            }
        },
        "tags": {
            "type": "object",
            "defaultValue": {
                "Dept": "Finance",
                "Environment": "Production"
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            "apiVersion": "2015-10-31",
            "type": "Microsoft.Automation/automationAccounts/runbooks",
            "name": "[concat(parameters('AutomationAccountName'), '/', parameters('runbookName'))]",
            "location": "[resourceGroup().location]",
            "tags": "[parameters('tags')]",
            "dependsOn": [],
            "properties": {
                "description": "[parameters('runbookDescription')]",
                "runbookType": "PowerShell",
                "logProgress": false,
                "logVerbose": false,
                "publishContentLink": {
                    "uri": "[parameters('scriptUri')]",
                    "version": "[parameters('RunbookVersion')]"
                }
            }
        },
        {
            "apiVersion": "2015-10-31",
            "name": "[concat(parameters('AutomationAccountName'), '/', parameters('JobID'))]",
            "type": "Microsoft.Automation/automationAccounts/jobs",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Automation/automationAccounts/', parameters('AutomationAccountName'), '/runbooks/', parameters('runbookName'))]"
            ],
            "tags": {},
            "properties": {
                "runbook": {
                    "name": "[parameters('runbookName')]"
                },
                "parameters": {
                    "AutomationResourceGroup": "[resourceGroup().name]",
                    "AutomationAccount": "[parameters('AutomationAccountName')]",
                    "AccountId": "[parameters('AccountId')]",
                    "AccessToken": "[parameters('AccessToken')]"
                }
            }
        }
    ]
}
